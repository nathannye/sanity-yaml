{{#if (shouldRemoveDefineField)}}
{
    name: '{{name}}',
    type: 'reference',
    to: [{{#each to}}
        { type: '{{this.type}}' }{{#unless @last}},{{/unless}}
    {{/each}}],
    {{> sanity-validation validation=validation}}
},
{{else}}
defineField({
    name: '{{name}}',
    type: 'reference',
    to: [{{#each to}}
        { type: '{{this.type}}' }{{#unless @last}},{{/unless}}
    {{/each}}],
    {{> sanity-validation validation=validation}}
}),
{{/if}}